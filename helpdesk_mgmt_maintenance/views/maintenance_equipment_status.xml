<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="maintenance_equipment_status_view_tree" model="ir.ui.view">
        <field name="name">maintenance.equipment.status.tree (Helpdesk Maintenance)</field>
        <field name="model">maintenance.equipment.status</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name" string="Name" attrs="{'decoration-danger': [('name', '=', 'scrap')]}"/>
                <field name="scrap"/>
            </tree>
        </field>
    </record>

</odoo>
