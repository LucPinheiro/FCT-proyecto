<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Project Project tree view -->
    <record id="help_main_maintenance_project_tree" model="ir.ui.view">
        <field name="name">project.project.tree (Helpdesk Maintenance)</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="ticket_count" string= 'NÂº Tickets' />
            </xpath>
        </field>
    </record>

    <!-- Project Project form view -->
    <record id="help_main_maintenance_project_form" model="ir.ui.view">
        <field name="name">project.project.form (Helpdesk Maintenance)</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="ticket_ids" string='Tickets' widget="many2many_tags" />
            </xpath>
        </field>
    </record>

</odoo>
